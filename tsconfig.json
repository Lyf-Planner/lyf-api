{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "rootDir": ".",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "target": "es2017",
    "types": [
      "jest",
      "node"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "schema"
  ],
  "exclude": [
    "node_modules"
  ]
}