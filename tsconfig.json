{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "target": "es2017",
    "types": ["jest", "node"]
  },
  "compileOnSave": true,
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
